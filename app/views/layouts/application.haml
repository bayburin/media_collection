!!!
%html
  %head
    %title Медиа коллекция
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = favicon_link_tag "favicon.png"
  %body
    - if user_signed_in?
      .navbar.navbar-default.navbar-fixed-top.navbar-inverse.shadow
        .navbar-inner
          .container
            .navbar-brand
            .nav-collapse
              %ul.nav.navbar-nav
                %li{ class: "#{"active" if current_page?(root_path)}" }
                  = link_to "Просмотр", root_path
                %li{ class: "#{"active" if current_page?(new_item_path)}" }
                  = link_to "Добавить в коллекцию", new_item_path
              %ul.nav.navbar-nav.pull-right
                %li
                  = link_to "Выход", destroy_user_session_path, method: :delete
              .input-group.pull-right
                %input.form-control{ value: link_to_collection(current_user) }


    %p.center.notice.notice-green= notice
    %p.center.notice.notice-red= alert
    %p.center.notice-green= flash[:error]
    %p.center.notice-red= flash[:success]

    = yield
